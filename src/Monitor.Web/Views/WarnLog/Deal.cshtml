@model WarningDealModel
@{
    ViewData["Title"] = "处理警告日志";
    Layout = "~/Views/Shared/_Layout_Edit.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Deal" method="post" id="EditForm" class="form-horizontal">
                <div class="row">
                    <div class="col-md-offset-1 col-sm-offset-1 col-xs-offset-1 col-md-10 col-sm-10 col-xs-10">
                        <div class="form-group input-group">
                            <input type="hidden" asp-for="FID" />
                        </div>
                        <div class="form-group input-group col-md-12 col-sm-12 col-xs-12">
                            <span class="input-group-addon width-100">操作建议</span>
                            <textarea class="form-control" asp-for="FOperateAdvice" readonly></textarea>
                        </div>
                        <div class="form-group input-group col-md-12 col-sm-12 col-xs-12">
                            <span class="input-group-addon width-100">处理方案</span>
                            <textarea class="form-control" asp-for="FTreatmentScheme"></textarea>
                        </div>
                    </div>
                    <div class="btn-group col-md-offset-3 col-sm-offset-3 col-xs-offset-3 col-md-8 col-sm-8 col-xs-8">
                        <input class="btn btn-primary" type="submit" style="margin-right:15px;" value="保 存" />
                        <input class="btn btn-default" type="button" style="margin-right:15px;" value="返 回" onclick="CloseCurrentWindow()" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Script{
    <script type="text/javascript">
        $("#EditForm").submit(function () {
            if (!$("#EditForm").valid()) { return false; }
            AjaxRequest({
                type: this.method,
                url: this.action,
                data: $(this).serialize()
            }, function (successData) {
                ShowSuccess("操作成功", function () {
                    top.Refresh();
                    CloseWinSelf();
                });
            }, function (failData) {
            });
            return false;
        })
    </script>
}
