@model IPageResult<ServicerListDto>
@{
    ViewData["Title"] = "服务器列表";
}
<div id="page-wrapper">
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="col-sm-2">服务器列表</div>
                        <div class="col-sm-1 col-sm-offset-9"><a class="btn btn-primary btn-sm OpenFrame" href="/Servicer/Add?w=600&h=500" title="添加服务器">添加</a></div>
                    </div>
                </div>
            </div>
            <div class="panel-body" style="padding-top:0px;">
                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    @Html.Partial("_QueryWhere", ViewBag.QueryWhere as ServicePageQueryWhere)
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-striped table-bordered table-hover dataTable" id="dataTables-example" style="width: 100%;">
                                <thead>
                                    <tr>
                                        <th class="center">名字</th>
                                        <th class="center">MAC地址</th>
                                        <th class="center">服务器IP</th>
                                        <th class="center">服务器说明</th>
                                        <th class="center">最后修改时间</th>
                                        <th class="center">操作</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Data.Any())
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="center">@item.FName</td>
                                                <td class="center">@item.FMacAddress</td>
                                                <td class="center">@item.FIP</td>
                                                <td class="center">@item.FComment</td>
                                                <td class="center">@item.FLastModifyTime</td>
                                                <td class="center">A</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td class="center" colspan="6">暂无记录</td></tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <pager jqcore-page="Model"></pager>
                        @*<div class="col-sm-6">
                                <div class="dataTables_info" id="dataTables-example_info" role="status" aria-live="polite">Showing 1 to 10 of 57 entries</div>
                            </div>
                            <div class="col-sm-6">
                                <div class="dataTables_paginate paging_simple_numbers">
                                    <ul class="pagination">
                                        <li class="paginate_button previous disabled" ><a href="#">Previous</a></li>
                                        <li class="paginate_button active" ><a href="#">1</a></li>
                                        <li class="paginate_button" ><a href="#">2</a></li>
                                        <li class="paginate_button" ><a href="#">3</a></li>
                                        <li class="paginate_button" ><a href="#">4</a></li>
                                        <li class="paginate_button" ><a href="#">5</a></li>
                                        <li class="paginate_button" ><a href="#">6</a></li>
                                        <li class="paginate_button next"><a href="#">Next</a></li>
                                    </ul>
                                </div>
                            </div>*@
                    </div>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>
